<Window x:Class="ETools.Placement.ArrayInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Array Placement Settings" Height="250" Width="320"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">
            <TextBlock TextWrapping="Wrap" FontSize="13" Margin="0,0,0,10"
                       Text="After clicking OK, you will select two corner points that define the array." />

            <TextBlock Text="Number of Columns:"/>
            <TextBox x:Name="ColumnsTextBox" Text="1" Margin="0,0,0,10"/>

            <TextBlock Text="Number of Rows:"/>
            <TextBox x:Name="RowsTextBox" Text="1" Margin="0,0,0,10"/>

            <CheckBox x:Name="DoNotShowAgainCheckBox" Content="Don't show this message again" Margin="0,0,0,10"/>

            <Button Content="OK" Width="80" HorizontalAlignment="Right" Click="OK_Click"/>
        </StackPanel>
    </Grid>
</Window>
