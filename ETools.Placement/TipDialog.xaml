<Window x:Class="ETools.Placement.TipDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instruction" Height="200" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="InstructionText" TextWrapping="Wrap" FontSize="14" Margin="0,0,0,15"/>
            <CheckBox x:Name="DoNotShowAgainCheckBox" Content="Don't show this message again" Margin="0,0,0,15"/>
            <Button Content="OK" Width="80" HorizontalAlignment="Right" Click="OK_Click"/>
        </StackPanel>
    </Grid>
</Window>
